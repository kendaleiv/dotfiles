[user]
  name = Ken Dale
  email = ken@kendaleiv.com
[core]
  autocrlf = true
  ignorecase = false
[alias]
  c = commit
  co = checkout
  d = diff --patch-with-stat
  s = status

  # https://stackoverflow.com/a/9074343/941536
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

  # Adapted from https://stackoverflow.com/a/9074343/941536
  l = !"git lg1"
[pull]
  ff = only
  rebase = true
[push]
  default = simple
[rebase]
  autoStash = true
[diff]
  guitool = kdiff3
[difftool]
  prompt = false
[difftool "kdiff3"]
  path = C:/Program Files/KDiff3/kdiff3.exe
[merge]
  tool = kdiff3
[mergetool]
  keepBackup = false
[mergetool "kdiff3"]
  path = C:/Program Files/KDiff3/kdiff3.exe
[gui]
  gcwarning = false

# http://stackoverflow.com/a/29320572/941536 from https://stackoverflow.com/questions/10998792/how-to-color-the-git-console-in-ubuntu
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
